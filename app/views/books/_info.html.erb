<div class="user-info">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr class="row">
        <th class="border-top p-12">name</th>
        <th class="border-top p-12"><%= user.name %></th>
      </tr>
      <tr class="row">
        <th class="border-top p-12">introduction</th>
        <th class="border-top p-12"><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <%= link_to edit_user_path(user) do %>
    <button class="btn btn-outline-secondary btn-block">
      <i class="fa-solid fa-user-gear"></i>
    </button>
  <% end %>
</div>


<div class="new-book">
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "form-control book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</p>
    <%= f.text_area :body, class: "form-control book_opinion" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
  <% end %>
</div>