<div class="user-info">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr class="row">
        <th class="border-top p-12 col-9">name</th>
        <th class="border-top p-12 col-3"><%= user.name %></th>
      </tr>
      <tr class="row">
        <th class="border-top p-12 col-9">introduction</th>
        <th class="border-top p-12 col-3"><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user) do %>
    <button><i class="fa-solid fa-user-gear"></i></button>
  <% end %>
</div>


<div class="new-book">
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>