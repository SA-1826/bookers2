<div class="user-info">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100, 100) %>
    <p>name <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <%= link_to edit_user_path(@user) do %>
        <button><i class="fa-solid fa-user-gear"></i></button>
    <% end %>
</div>


<div class="new-book">
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="books">
    <h2>Books</h2>
    <table>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book) do %>
                    <%= book.title %>
                <% end %>
            </td>
            <td>
                <%= book.body %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
