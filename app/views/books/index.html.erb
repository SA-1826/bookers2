<div class="user-info">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100, 100) %>
    <p>name <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <%= link_to edit_user_path(@user) do %>
        <button><i class="fa-solid fa-user-gear"></i></button>
    <% end %>
</div>


<div class="new-book">
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="books">
    <h2>Books</h2>
    <% @books.each do |book| %>
        <%= image_tag book.get_book_image(80, 80) %>
    <% end %>
</div>
