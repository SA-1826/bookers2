<%= render 'info', user: @user, book: @book %>

<div class="books">
    <h2>Books</h2>
    <table>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book) do %>
                    <%= book.title %>
                <% end %>
            </td>
            <td>
                <%= book.body %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
