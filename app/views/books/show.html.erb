<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user, book: @book %>
    </div>

    <div class="book-detail col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100, 100) %><br />
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td>
              <%= @book_detail.body %>
            </td>
            <td>
              <% if @book_detail.user == current_user %>
                <%= link_to 'Edit', edit_book_path(@book_detail), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book_detail.user == current_user %>
                <%= link_to 'Destroy', book_path(@book_detail), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>